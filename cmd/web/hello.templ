package web

templ HelloForm() {
	@Base() {
		<form hx-post="/web/hello" method="POST" hx-target="#hello-container">
			<input id="name" name="name" type="text"/>
			<button type="submit">Submit</button>
		</form>
		<div id="hello-container"></div>
	}
}

templ HelloPost(name string) {
	<div class="text-3xl">Hello, { name }</div>
}
