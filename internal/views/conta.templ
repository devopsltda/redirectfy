  @components.BaseNoAuth("Validação expirada") {
    <div class="mt-10 flex flex-col gap-10 items-center justify-between">
      <svg class="text-rprimary w-28 h-28" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4">
        <path fill-rule="evenodd" d="M12.416 3.376a.75.75 0 0 1 .208 1.04l-5 7.5a.75.75 0 0 1-1.154.114l-3-3a.75.75 0 0 1 1.06-1.06l2.353 2.353 4.493-6.74a.75.75 0 0 1 1.04-.207Z" clip-rule="evenodd" />
      </svg>
      <p class="text-justify text-last-center">
        Sua conta do Redirectify foi validada com sucesso. Para acessá-la, faça login.
      </p>
      @components.ButtonPrimary("Fazer login", "button")
    </div>
  }
}

templ AccountNotValidated() {
  @components.BaseNoAuth("Conta criada com sucesso") {
    <div class="mt-10 flex flex-col gap-10 items-center justify-between">
      <svg class="text-rprimary w-28 h-28" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4">
        <path fill-rule="evenodd" d="M3.05 3.05a7 7 0 1 1 9.9 9.9 7 7 0 0 1-9.9-9.9Zm1.627.566 7.707 7.707a5.501 5.501 0 0 0-7.707-7.707Zm6.646 8.768L3.616 4.677a5.501 5.501 0 0 0 7.707 7.707Z" clip-rule="evenodd" />
      </svg>
      <p class="text-justify text-last-center">
        O link de validação estava expirado, solicite um novo abaixo.
      </p>
      @components.ButtonPrimary("Solicitar um novo link", "button")
    </div>
  }
}
